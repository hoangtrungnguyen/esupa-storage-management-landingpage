---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Storage Management Software">
    <!-- Header / Navigation -->
    <header class="absolute inset-x-0 top-0 z-50">
        <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
            <div class="flex lg:flex-1">
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="text-2xl font-bold text-indigo-600">Idea Space Board</span>
                </a>
            </div>
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="#features" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">Features</a>
                <a href="#integrations" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">Integrations</a>
                <a href="/Pricing" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">Pricing</a>
            </div>
            <div class="hidden lg:flex lg:flex-1 lg:justify-end">
                <a href="#" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white mr-6">Log in</a>
                <a href="#" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign up</a>
            </div>
            <!-- Mobile menu button -->
            <div class="flex lg:hidden">
                <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 dark:text-gray-400" id="mobile-menu-open">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
        </nav>
        
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div class="lg:hidden hidden" role="dialog" aria-modal="true" id="mobile-menu">
            <div class="fixed inset-0 z-50"></div>
            <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white dark:bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
                <div class="flex items-center justify-between">
                    <a href="#" class="-m-1.5 p-1.5">
                        <span class="text-2xl font-bold text-indigo-600">Idea Space Board</span>
                    </a>
                    <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700 dark:text-gray-400" id="mobile-menu-close">
                        <span class="sr-only">Close menu</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="mt-6 flow-root">
                    <div class="-my-6 divide-y divide-gray-500/10">
                        <div class="space-y-2 py-6">
                            <a href="#features" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Features</a>
                            <a href="#integrations" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Integrations</a>
                            <a href="/Pricing" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Pricing</a>
                        </div>
                        <div class="py-6">
                            <a href="#" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Log in</a>
                            <a href="#" class="mt-2 -mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-white bg-indigo-600 hover:bg-indigo-500">Sign up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        <div class="relative isolate pt-14 gradient-bg">
            <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
                <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
            </div>
            <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:flex lg:items-center lg:gap-x-10 lg:px-8 lg:py-40">
                <div class="mx-auto max-w-2xl lg:mx-0 lg:flex-auto">
                    <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
                        Where System Planning Meets Seamless Collaboration.
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
                        The collaborative whiteboard for tech companies. Design software systems, map customer journeys, and integrate your workflow—all in one place.
                    </p>
                    <div class="mt-10 flex items-center gap-x-6">
                        <a href="#" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Get started free</a>
                        <a href="#" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">Learn more <span aria-hidden="true">→</span></a>
                    </div>
                </div>
                <div class="mt-16 sm:mt-24 lg:mt-0 lg:flex-shrink-0 lg:flex-grow">
                    <img src="httpsT://placehold.co/600x400/EEF2FF/4F46E5?text=Idea+Space+Board+Demo" 
                         alt="Idea Space Board product screenshot showing a system diagram" 
                         class="w-full h-auto max-w-lg mx-auto rounded-lg shadow-xl"
                         onerror="this.src='https://placehold.co/600x400/EEF2FF/4F46E5?text=Collaborative+Whiteboard'; this.onerror=null;">
                </div>
            </div>
        </div>

        <!-- Feature Section -->
        <div id="features" class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">Purpose-built for tech teams.</h2>
                <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
                    Stop fighting with tools built for generalists. Get features designed for your specific workflows.
                </p>
            </div>
            <div class="mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-20 lg:mt-24 lg:max-w-none lg:grid-cols-3">
                
                <!-- Feature 1: System Planning -->
                <div class="flex flex-col">
                    <div class="flex-shrink-0">
                        <span class="feature-icon inline-flex h-12 w-12 items-center justify-center rounded-lg">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z" />
                            </svg>
                        </span>
                    </div>
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">Detailed System Planning</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        Move beyond basic shapes. Design complex software architecture, database schemas, and API flows with smart tools and templates built for engineers.
                    </p>
                </div>

                <!-- Feature 2: Customer Journey Mapping -->
                <div class="flex flex-col">
                    <div class="flex-shrink-0">
                        <span class="feature-icon inline-flex h-12 w-12 items-center justify-center rounded-lg">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A1.875 1.875 0 0118 22.5h-12a1.875 1.875 0 01-1.501-2.382z" />
                            </svg>
                        </span>
                    </div>
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">Customer Journey Mapping</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        Visualize every user touchpoint from discovery to adoption. Build shared understanding across your product, marketing, and engineering teams.
                    </p>
                </div>

                <!-- Feature 3: Integrations -->
                <div class="flex flex-col">
                    <div class="flex-shrink-0">
                        <span class="feature-icon inline-flex h-12 w-12 items-center justify-center rounded-lg">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                            </svg>
                        </span>
                    </div>
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">Powerful Integrations</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        Stop context-switching. Connect your boards directly to Todoist, Google Meet, and Google Calendar to turn bright ideas into actionable plans.
                    </p>
                </div>

            </div>
        </div>

        <!-- "Why Us?" Section (vs. Figma) -->
        <div id="integrations" class="bg-indigo-700">
            <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:flex lg:items-center lg:justify-between lg:px-8">
                <div class="max-w-xl">
                    <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
                        Built for Planning, Not Just Design.
                    </h2>
                    <p class="mt-4 text-lg leading-8 text-indigo-200">
                        While tools like Figma are great for pixels, Idea Space Board is purpose-built for the entire tech team. Plan, strategize, and execute on complex systems without getting lost in design-first features.
                    </p>
                </div>
                <div class="mt-10 flex items-center gap-x-6 lg:mt-0 lg:flex-shrink-0">
                    <img src="httpsT://placehold.co/200x200/FFFFFF/4F46E5?text=Todoist" alt="Todoist logo" class="h-16 w-16 rounded-lg shadow-lg" onerror="this.src='https://placehold.co/200/FFFFFF/4F46E5?text=Todoist'; this.onerror=null;">
                    <img src="httpsT://placehold.co/200x200/FFFFFF/4F46E5?text=Google+Meet" alt="Google Meet logo" class="h-16 w-16 rounded-lg shadow-lg ml-4" onerror="this.src='https://placehold.co/200/FFFFFF/4F46E5?text=G+Meet'; this.onerror=null;">
                    <img src="httpsT://placehold.co/200x200/FFFFFF/4F46E5?text=Google+Calendar" alt="Google Calendar logo" class="h-16 w-16 rounded-lg shadow-lg ml-4" onerror="this.src='https://placehold.co/200/FFFFFF/4F46E5?text=G+Cal'; this.onerror=null;">
                </div>
            </div>
        </div>


        <!-- Final CTA Section -->
        <div class="bg-white dark:bg-gray-900">
            <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
                        Ready to build your next great idea?
                    </h2>
                    <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
                        Start for free. No credit card required.
                    </p>
                    <div class="mt-10 flex items-center justify-center gap-x-6">
                        <a href="#" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Start your free trial</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
        <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
            <div class="flex justify-center space-x-6">
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">About</a>
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">Blog</a>
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">Jobs</a>
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">Privacy</a>
            </div>
            <p class="mt-10 text-center text-xs leading-5 text-gray-400">
                &copy; 2025 Idea Space Board. All rights reserved.
            </p>
        </div>
    </footer>
</Layout>

<script>
  const mobileMenuOpen = document.getElementById('mobile-menu-open');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuOpen && mobileMenuClose && mobileMenu) {
    mobileMenuOpen.addEventListener('click', () => {
      mobileMenu.classList.remove('hidden');
    });

    mobileMenuClose.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  }
</script>