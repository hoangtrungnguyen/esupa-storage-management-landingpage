---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang },
    }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Idea Space Board - Store Management Software">
    <!-- Header / Navigation -->
    <header class="absolute inset-x-0 top-0 z-50">
        <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
            <div class="flex lg:flex-1">
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="text-2xl font-bold text-indigo-600">Idea Space Board</span>
                </a>
            </div>
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="#features" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">{t('nav.features')}</a>
                <a href={`/${lang}/Pricing`} class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">{t('nav.pricing')}</a>
                <a href={`/${lang}/downloading`} class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">{t('nav.download')}</a>
                <a href={`/${lang}/Contact`} class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">{t('nav.contact')}</a>
            </div>
            
            <!-- Mobile menu button -->
            <div class="flex lg:hidden">
                <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 dark:text-gray-400" id="mobile-menu-open">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
        </nav>
        
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div class="lg:hidden hidden" role="dialog" aria-modal="true" id="mobile-menu">
            <div class="fixed inset-0 z-50"></div>
            <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white dark:bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
                <div class="flex items-center justify-between">
                    <a href="#" class="-m-1.5 p-1.5">
                        <span class="text-2xl font-bold text-indigo-600">Idea Space Board</span>
                    </a>
                    <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700 dark:text-gray-400" id="mobile-menu-close">
                        <span class="sr-only">Close menu</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="mt-6 flow-root">
                    <div class="-my-6 divide-y divide-gray-500/10">
                        <div class="space-y-2 py-6">
                            <a href="#features" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">{t('nav.features')}</a>
                            <a href={`/${lang}/Pricing`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">{t('nav.pricing')}</a>
                            <a href={`/${lang}/downloading`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">{t('nav.download')}</a>
                            <a href={`/${lang}/Contact`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">{t('nav.contact')}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        <div class="relative isolate pt-14 gradient-bg">
            <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
                <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
            </div>
            <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:flex lg:items-center lg:gap-x-10 lg:px-8 lg:py-40">
                <div class="mx-auto max-w-2xl lg:mx-0 lg:flex-auto">
                    <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
                        {t('hero.title')}
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
                        {t('hero.subtitle')}
                    </p>
                    <div class="mt-10 flex items-center gap-x-6">
                        <a href={`/${lang}/Contact`} class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{t('hero.cta')}</a>
                        <a href="#features" class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">{t('hero.learnMore')} <span aria-hidden="true">â†’</span></a>
                    </div>
                </div>
                <div class="mt-16 sm:mt-24 lg:mt-0 lg:flex-shrink-0 lg:flex-grow">
                    <img src="httpsT://placehold.co/600x400/EEF2FF/4F46E5?text=Idea+Space+Board+Demo" 
                         alt="Idea Space Board product screenshot showing a manufacturing process diagram" 
                         class="w-full h-auto max-w-lg mx-auto rounded-lg shadow-xl"
                         onerror="this.src='https://placehold.co/600x400/EEF2FF/4F46E5?text=Manufacturing+Workflow'; this.onerror=null;">
                </div>
            </div>
        </div>

        <!-- Feature Section -->
        <div id="features" class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">{t('features.title')}</h2>
                <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
                    {t('features.subtitle')}
                </p>
            </div>
            <div class="mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-20 lg:mt-24 lg:max-w-none lg:grid-cols-4">
                
                <!-- Feature 1: Inventory Tracking -->
                <div class="flex flex-col">
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">{t('feature1.title')}</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        {t('feature1.subtitle')}
                    </p>
                </div>

                <!-- Feature 2: Production Visualization -->
                <div class="flex flex-col">
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">{t('feature2.title')}</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        {t('feature2.subtitle')}
                    </p>
                </div>

                <!-- Feature 3: Supply Chain Management -->
                <div class="flex flex-col">
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">{t('feature3.title')}</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        {t('feature3.subtitle')}
                    </p>
                </div>
                
                <!-- Feature 4: Sales and Order Tracking -->
                <div class="flex flex-col">
                    <h3 class="mt-5 text-xl font-semibold leading-7 text-gray-900 dark:text-white">{t('feature4.title')}</h3>
                    <p class="mt-2 flex-auto text-base leading-7 text-gray-600 dark:text-gray-300">
                        {t('feature4.subtitle')}
                    </p>
                </div>

            </div>
        </div>

        <!-- Final CTA Section -->
        <div class="bg-white dark:bg-gray-900">
            <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
                        {t('cta.title')}
                    </h2>
                    <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
                        {t('cta.subtitle')}
                    </p>
                    <div class="mt-10 flex items-center justify-center gap-x-6">
                        <a href={`/${lang}/Contact`} class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{t('cta.button')}</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
        <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
            <div class="flex justify-center space-x-6">
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">{t('footer.about')}</a>
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">{t('footer.blog')}</a>
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">{t('footer.jobs')}</a>
                <a href="#" class="text-sm leading-6 text-gray-300 hover:text-white">{t('footer.privacy')}</a>
            </div>
            <p class="mt-10 text-center text-xs leading-5 text-gray-400">
                {t('footer.copy')}
            </p>
        </div>
    </footer>
</Layout>

<script>
  const mobileMenuOpen = document.getElementById('mobile-menu-open');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuOpen && mobileMenuClose && mobileMenu) {
    mobileMenuOpen.addEventListener('click', () => {
      mobileMenu.classList.remove('hidden');
    });

    mobileMenuClose.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  }
</script>
