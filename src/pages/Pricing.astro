---
import Layout from "../layouts/Layout.astro";
import PricingCard from "../components/PricingCard.astro";

const pricingPlans = [
  {
    title: "Free Local Plan",
    description:
      "Get started with our powerful Storage Management Software running entirely on your local machine. Perfect for personal use or small teams.",
    features: [
      "Local storage management",
      "Unlimited local storage",
      "Basic reporting",
      "Community support",
    ],
    priceTitle: "Completely Free",
    price: "$0",
    currency: "USD",
    buttonText: "Download for Free",
    buttonLink: "#",
    subPriceText: "No credit card required",
  },
  {
    title: "Pay-as-you-go Cloud Plan",
    description:
      "Scale your storage and compute resources as needed. Only pay for what you use, with flexible options for growing businesses.",
    features: [
      "Cloud storage & compute",
      "Advanced analytics",
      "Priority support",
      "API access",
    ],
    priceTitle: "Pay as you go",
    price: "$0.0X",
    frequency: "/ GB or compute hour",
    buttonText: "Get Started with Cloud",
    buttonLink: "#",
    subPriceText: "Usage-based billing",
  },
];
---

<Layout title="Pricing - Storage Management Software">
  <main
    class="relative isolate overflow-hidden bg-white dark:bg-gray-900 py-24 sm:py-32"
  >
    <div class="absolute inset-0 -z-10 h-full w-full bg-white dark:bg-gray-900">
      <div
        class="absolute top-0 left-1/2 -ml-[50rem] -mt-[20rem] h-[60rem] w-[80rem] rounded-full bg-primary-100 dark:bg-primary-900/10 blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 right-1/2 -mr-[50rem] -mb-[20rem] h-[60rem] w-[80rem] rounded-full bg-indigo-100 dark:bg-indigo-900/10 blur-3xl"
      >
      </div>
    </div>

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-4xl sm:text-center animate-fade-in-up">
        <h2
          class="text-base font-semibold leading-7 text-primary-600 dark:text-primary-400"
        >
          Pricing
        </h2>
        <p
          class="mt-2 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl font-heading"
        >
          Simple, transparent pricing
        </p>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
          Choose the plan that best fits your needs, from local-only to scalable
          cloud solutions.
        </p>
      </div>
      <div
        class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-12 items-start mt-16 animate-fade-in"
        style="animation-delay: 0.2s;"
      >
        {pricingPlans.map((plan) => <PricingCard {...plan} />)}
      </div>
    </div>
  </main>
</Layout>
